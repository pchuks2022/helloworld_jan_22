pipeline {
    agent any
    tools{
        maven 'M2_HOME'
    }
    environment {
    registry = "380029451602.dkr.ecr.us-east-1.amazonaws.com/devop_repository"
    registryCredential = 'jenkins-ecr'
    dockerImage = ''
  }
    stages {
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/pchuks2022/helloworld_jan_22.git'
            }
        }
        stage('Code Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Build Image') {
            steps {
                script{
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                } 
            }
        }
        stage('Deploy image') {
            steps{
                script{ 
                    docker.withRegistry('380029451602.dkr.ecr.us-east-1.amazonaws.com','ecr:us-east-2:jenkins-ecr') {
                        dockerImage.push()
                    }
                }
            }
        }  
    }
}